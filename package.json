{
  "name": "gmok-f-next",
  "version": "1.0.0",
  "scripts": {
    "bootstrap": "pnpm install",
    "build": "pnpm --filter scripts build",
    "clean": "pnpm turbo run clean && rimraf node_modules",
    "dev": "pnpm --filter scripts dev",
    "format": "pnpm run lint:eslint & pnpm run lint:stylelint & pnpm run lint:prettier",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm run stub",
    "lint:eslint": "eslint . --cache --max-warnings 0 --fix",
    "lint:prettier": "prettier --write  \"{packages,apps,configs}/**/*.{js,json,ts,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --fix ",
    "prepare": "pnpm husky install",
    "reinstall": "pnpm turbo run clean && rimraf pnpm-lock.yaml && rimraf node_modules && npm run bootstrap",
    "stub": "pnpm --filter @config/vite prepack",
    "test": "vitest"
  },
  "devDependencies": {
    "@config/lint": "workspace:*",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.31",
    "cross-env": "^7.0.3",
    "esno": "^0.14.1",
    "fs-extra": "^10.1.0",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "pathe": "^0.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.72.0",
    "ts-node": "^10.7.0",
    "tsconfig": "workspace:*",
    "turbo": "^1.2.6",
    "typescript": "^4.6.4",
    "unbuild": "^0.7.4",
    "vitest": "^0.10.2"
  }
}
